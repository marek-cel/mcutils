{
    "version": 3,
    "configurePresets": [
        {
            "name": "linux-common-conf",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Unix Makefiles",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-clang-conf",
            "inherits": "linux-common-conf",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "linux-gcc-conf",
            "inherits": "linux-common-conf",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "linux-clang-debug-conf",
            "inherits": "linux-clang-conf",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "ON",
                "ENABLE_CLANG_TIDY": "ON"
            }
        },
        {
            "name": "linux-clang-release-conf",
            "inherits": "linux-clang-conf",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTING": "ON",
                "ENABLE_CLANG_TIDY": "ON"
            }
        },
        {
            "name": "linux-gcc-debug-conf",
            "inherits": "linux-gcc-conf",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "ON",
                "ENABLE_CLANG_TIDY": "OFF"
            }
        },
        {
            "name": "linux-gcc-release-conf",
            "inherits": "linux-gcc-conf",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTING": "ON",
                "ENABLE_CLANG_TIDY": "OFF"
            }
        },
        {
            "name": "windows-common-conf",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-msvc2022-conf",
            "inherits": "windows-common-conf",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "windows-msvc2022-debug-conf",
            "inherits": "windows-msvc2022-conf",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "ON",
                "ENABLE_CLANG_TIDY": "OFF"
            }
        },
        {
            "name": "windows-msvc2022-release-conf",
            "inherits": "windows-msvc2022-conf",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTING": "ON",
                "ENABLE_CLANG_TIDY": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name" : "linux-common-build",
            "hidden": true,
            "targets": ["all", "tests-mcutils"],
            "jobs": 0
        },
        {
            "name": "linux-clang-debug-build",
            "inherits": "linux-common-build",
            "configurePreset": "linux-clang-debug-conf",
            "configuration": "Debug"
        },
        {
            "name": "linux-clang-release-build",
            "inherits": "linux-common-build",
            "configurePreset": "linux-clang-release-conf",
            "configuration": "Release"
        },
        {
            "name": "linux-gcc-debug-build",
            "inherits": "linux-common-build",
            "configurePreset": "linux-gcc-debug-conf",
            "configuration": "Debug"
        },
        {
            "name": "linux-gcc-release-build",
            "inherits": "linux-common-build",
            "configurePreset": "linux-gcc-release-conf",
            "configuration": "Release"
        },
        {
            "name" : "windows-common-build",
            "hidden": true,
            "targets": ["ALL_BUILD", "tests-mcutils"],
            "jobs": 0
        },
        {
            "name": "windows-msvc2022-debug-build",
            "inherits": "windows-common-build",
            "configurePreset": "windows-msvc2022-debug-conf",
            "configuration": "Debug"
        },
        {
            "name": "windows-msvc2022-release-build",
            "inherits": "windows-common-build",
            "configurePreset": "windows-msvc2022-release-conf",
            "configuration": "Release"
        }
    ]
}